<h1>Games#new</h1>
<p>Find me in app/views/games/new.html.erb</p>
<p><%= @letters %></p>

<ol>
  <% @letters.each do |letter| %>
    <li><%= letter.capitalize %></li>
  <% end %>
</ol>

<p>What is the longest word you can make from the letters above?</p>

<form action="/games/score" method ="post" data-turbo="false">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <%= hidden_field_tag :start_time, @start_time.to_i %>
  <input class="form-control"
  type="text"
  name="word"
  placeholder = "type in your word"
  >
  <input type="submit" value="Check score!" class="btn btn-primary">
</form>
